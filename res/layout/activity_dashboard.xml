<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/debut_dark"
    android:orientation="vertical"
    android:padding="@dimen/content_space" >

    <TextView
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Requests" />

    <ListView
        android:id="@+id/activity_dashboard_lv_requests"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/content_space"/>

    <Button
        android:id="@+id/activity_dashboard_btn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/ColorButton"
        android:text="Start a new composition!" />

</LinearLayout>